#!/usr/bin/env ruby
$:.push File.expand_path("../../lib", __FILE__)

require 'alamano'

case $1
when 'help'
  puts <<-_END_
    help:   this help text
    init:   creates sample configuration and skeleton
    build:  process the templates and generates static files
  _END_
when 'init'
when 'build'
else
  Alamano::Config.echo
end